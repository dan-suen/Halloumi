{
  "name": "QuikText",
  "version": "1.0.0",
  "description": "This extension allows users to quickly text from the web",
  "manifest_version": 3,
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "background": {
    "service_worker": "./static/js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./static/js/content.js"]
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "48": "logo.png",
      "128": "logo.png"
    }
  },
  "permissions": ["storage", "tabs"]
}
